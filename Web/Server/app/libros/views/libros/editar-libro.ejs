<h1>Formulario de Actualización</h1>
<p>Editar libro</p>
<form
        action="/libros/editar/<%=libro.id%>"
        method="post"
>

    <label for="nombreId">Nombre</label>
    <input id="nombreId" name="nombre" type="text" value="<%=libro.nombre%>">
    <br>
    <br>

    <label for="tipoId">Tipo</label>
    <select name="tipo" id="tipo" value="<%=libro.tipo%>">
        <option value="Novela">Novela</option>
        <option value="Literatura">Literatura</option>
        <option value="Cientifico"></option> 
        <option value="Viaje">Viaje</option>
        <option value="Biografia">Biografía</option>
        <option value="Consulta">Consulta</option>
    </select>
    
    <br>
    <br>

    <label for="edicionId" >Edición</label>
    <input id="edicionId"  value="<%=libro.edicion%>" name="edicion" type="number" min="0" max="10" step="0.10">
    <br>
    <br>

    <label for="fechaId">Fecha</label>
    <input id="fechaId" name="fecha" type="date"  value="<%=libro.fecha%>">
    <br>
    <br>

    <label for="precioId">Precio</label>
    <input id="precioId"  value="<%=libro.precio%>" name="precio" type="number" min="0" step="1">
    <br>
    <br>

    <button type="reset">Limpiar</button>
    <!--<button type="submit">Submit</button>-->

    <a href="/libros/lista"><button type="button">Cancelar</button></a>

    <button>Enviar informacion</button>

</form>